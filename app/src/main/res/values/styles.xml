<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TMEFullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/okuda</item>
        <item name="android:textSize">24sp</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TMETabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/TabSize</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/black</item>
        <item name="tabTextAppearance">@style/TMETabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="TMETabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/okuda</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>