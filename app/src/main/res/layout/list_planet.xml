<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomborder">

    <ImageView
        android:id="@+id/imgPlanetIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0"
        android:contentDescription="@string/planet_icon"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPlanetId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/planet_id"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtPlanetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/planet_name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtPlanetSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/planet_size"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>